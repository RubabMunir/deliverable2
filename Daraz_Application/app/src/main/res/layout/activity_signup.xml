<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- Close Button at the Top -->
    <ImageView
        android:id="@+id/close_button"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="start"
        android:src="@drawable/img_2"/>

    <!-- "Discover the endless possibilities" Text -->
    <ImageView
        android:id="@+id/logo_image"
        android:layout_width="wrap_content"
        android:layout_height="275dp"
        android:src="@drawable/img_3"/>

    <TextView
        android:id="@+id/discover_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discover the endless possibilities"
        android:textColor="#6495ED"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp" />

    <!-- Phone Number Input -->
    <LinearLayout
        android:id="@+id/phone_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"> <!-- Added orientation -->

        <!-- Country Code -->

        <!-- Phone Number EditText -->

        <TextView
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:paddingEnd="8dp"
            android:text=" +92"
            android:textColor="#000000"
            android:textSize="20sp"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="Sign up with Mobile Number"
            android:inputType="phone"
            android:padding="12dp"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20sp" />
    </LinearLayout>

    <!-- "or" Text -->
    <TextView
        android:id="@+id/or_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="or"
        android:textSize="14sp"
        android:textColor="#B0B0B0"
        android:layout_gravity="center"
        android:layout_marginTop="16dp" />

    <!-- Social Media Icons -->
    <LinearLayout
        android:id="@+id/social_icons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="16dp">

        <!-- Facebook Icon -->
        <ImageView
            android:id="@+id/facebook_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/img_4"
            android:layout_marginEnd="16dp" />

        <!-- Apple Icon -->
        <ImageView
            android:id="@+id/apple_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/img_5"
            android:layout_marginEnd="16dp" />

        <!-- Google Icon -->
        <ImageView
            android:id="@+id/google_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/img_6"
            android:layout_marginEnd="16dp" />
    </LinearLayout>

    <!-- "Already have account?" Text -->
    <TextView
        android:id="@+id/already_have_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have account?"
        android:textColor="#B0B0B0"
        android:textSize="14sp"
        android:layout_gravity="center"
        android:layout_marginTop="32dp" />

    <!-- "Login Now" Text -->
    <TextView
        android:id="@+id/login_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login Now"
        android:textColor="#0066CC"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="4dp" />

</LinearLayout>
